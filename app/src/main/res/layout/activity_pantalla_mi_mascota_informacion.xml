        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_texto_sexo_mascota_informacion_mi_mascota" />

    <TextView
        android:id="@+id/textView_fecha_nacimiento_mascota_informacion_mi_mascota"
