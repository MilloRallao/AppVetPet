        app:layout_constraintTop_toBottomOf="@+id/textView_sexo_mascota_informacion_mi_mascota" />

    <TextView
        android:id="@+id/textView_texto_edad_mascota_informacion_mi_mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_edad_info_textview"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_texto_fecha_nacimiento_mascota_informacion_mi_mascota" />

    <TextView
        android:id="@+id/textView_edad_mascota_informacion_mi_mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_fecha_nacimiento_mascota_informacion_mi_mascota" />

    <TextView
        android:id="@+id/textView_texto_edad_humana_mascota_informacion_mi_mascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_edad_humana_mascota_textview"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_texto_edad_mascota_informacion_mi_mascota" />

    <TextView
        android:id="@+id/textView_edad_humana_mascota_informacion_mi_mascota"
