<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:backgroundTint="@color/colorAccent"
    android:backgroundTintMode="add"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_cardview">

        <TextView
            android:id="@+id/textView_id_cita_proximas_citas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_mascota_proximas_citas"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_fecha_proximas_citas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView_hora_proximas_citas"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_hora_proximas_citas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_nombre_proximas_citas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView_mascota_proximas_citas"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_texto_motivo_proximas_citas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_motivo_proximas_citas_textview"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView_mascota_proximas_citas"
            app:layout_constraintTop_toBottomOf="@+id/textView_nombre_proximas_citas" />

        <TextView
            android:id="@+id/textView_motivo_proximas_citas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView_texto_motivo_proximas_citas"
            app:layout_constraintTop_toBottomOf="@+id/textView_nombre_proximas_citas" />

        <TextView
            android:id="@+id/textView_texto_cancelar_cita_proxima_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/text_cancelar_cita_textview"
            android:textAlignment="center"
            android:textColor="#600E0E"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageButton_cancelar_cita_proximas_citas"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/imageButton_cancelar_cita_proximas_citas"
            android:layout_width="58dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/icono_cancelar_selector" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>